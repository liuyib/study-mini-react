{
  "env": {
    "browser": true,
    "node": true,
    "es2021": true
  },
  "extends": ["eslint:recommended", "plugin:react/recommended"],
  "overrides": [],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "plugins": ["react"],
  "rules": {
    // 关闭检查 jsx/tsx 中是否引入了 React（react v17+ 版本以后，无需手动引入 React）
    "react/react-in-jsx-scope": "off",
    // 允许有未使用的变量
    "no-unused-vars": "off"
  },
  "globals": {
    "module": true,
    "process": true,
    "require": true
  }
}
